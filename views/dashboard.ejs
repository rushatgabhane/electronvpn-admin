	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Dashboard</title>
	<meta name="description" content="View your data consumed and select your plan">
	<link rel="stylesheet" href="/css/main.css">
	<link rel="stylesheet" href="/css/dashboard.css">
	<link href="https://fonts.googleapis.com/css?family=Poppins:400,600,700&display=swap" rel="stylesheet">
	<script src="/scripts/dashboard.js"></script>
	<link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
	<link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
	<link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
	<link rel="manifest" href="/images/site.webmanifest">
	<link rel="mask-icon" href="/images/safari-pinned-tab.svg" color="#5bbad5">
	<link rel="shortcut icon" href="/images/favicon.ico">
	<meta name="msapplication-TileColor" content="#da532c">
	<meta name="msapplication-config" content="/images/browserconfig.xml">
	<meta name="theme-color" content="#ffffff">
</head>
<body>
	<section>
		<nav>
			<div class="logo">
				<a href="/" id="desktop-logo"><object type="image/svg+xml" data="/images/logo.svg"></object></a>
				<a href="/" id="mobile-logo">ElectronVPN</a>
			</div>
			<div class="desktop-nav">
				<a href="/support" class="desktop-nav-items"> Support</a>
				<a href="/logout" class="desktop-nav-items">Sign Out</a>
			</div>
			<div class="mobile-nav">
				<div id="menuArea">
					<input type="checkbox" id="menuToggle"></input>
					<label for="menuToggle" class="menuOpen">
					<div class="open"></div>
					</label>
					<div class="menu menuEffects">
					<label for="menuToggle"></label>
						<div class="menuContent">
							<ul>
								<li><a href="/support">Support</a></li>
								<li><a href="/logout">Sign Out</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</nav>
	</section>
	<section class="content">
		<div id="waves-bg">
				<% if (locals.torrentWarningMessage == 'true') {%>
					<script src="/scripts/sweetalert2.min.js"></script>
					<div class="torrent-warning">
						<script>
							Swal.fire({
								title: 'Downloading Torrents will lead to a ban and legal action',
								type: 'error',
								confirmButtonColor: 'red',
							});
						</script>
					</div>
				<% } %>
				<% if (locals.paymentMessage == 'Credit') { %>
					<script src="/scripts/sweetalert2.min.js"></script>
					<script>
						Swal.fire({
							title: 'Thank you for choosing ElectronVPN!',
							type: 'success',
							confirmButtonColor: '#ff00c4'
						});
					</script>
				<% } %>
				<% if (locals.showPayNow == 'true') { %>
					<script src="/scripts/sweetalert2.min.js"></script>
					<script>
						Swal.fire({
							title: 'Your free trial is about to end!',
							showCancelButton: true,
							html: '50 GB for &#x20b9 50',
							confirmButtonColor: '#ff00c4',
							confirmButtonText: '<a href="/pay/basic" style="color:#fff;">Buy Now</a>',
							cancelButtonText: 'Not Now',
							footer: '<a href="mailto:electronvpn@gmail.com">Any questions?</a>'
						});
					</script>
				<% } %>
            <div class ="waves-item-4">
				<!-- <h2 id="switch-to-laptop">Login from your laptop</h2> -->
                <div class="waves-inner-text <%=locals.hide%> animated bounce delay-1s">
                    <a href="/support?ref=dashboard"><button class="small-button">Download  <img src="/images/windows-logo-white.svg"></button></a>
                </div>
            </div>
			<div class="container waves-container waves-item-1">
				<div class="box">
					<h5>Data Remaining</h5>
					<h1 class="box-text text-gradient"><%=locals.dataUsed%> GB</h1>
					<h5>Time Remaining</h5>
					<h1 class="box-text"><%=locals.timeRemaining%> Days</h1>
				</div>
				<div class="waves-inner-text">
                    <a href="/pay/basic"><button class="small-button padding-bottom-20">Buy Now</button></a>
				</div>	
				<div class="box">
					<h5>Pricing</h5>
					<h1 class="box-text text-gradient">50<label class="text-gradient">&#8360;</label></h1>
					<h5 id="less-margin">per month</h5>
					<h1 class="box-text">50 GB</h1>
				</div>
            </div>
		</div>
	</section>
	<div class="footer">
		<a href="mailto:electronvpn@gmail.com"><h3>Contact Us</h3></a>
		<a href="/privacy"><h3>Privacy Policy</h3></a>
		<a href="/tos"><h3>Terms of Service</h3></a>
		<a href="/"><h3>Â© 2019 ElectronVPN</h3></a>
	</div>
</body>
</html>